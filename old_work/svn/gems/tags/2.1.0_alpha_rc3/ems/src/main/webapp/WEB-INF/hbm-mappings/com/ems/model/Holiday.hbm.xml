<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="com.ems.model.Holiday"
        table="holiday"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">holiday_seq</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Holiday.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="holiday"
            type="java.util.Date"
            update="true"
            insert="true"
            column="holiday"
        />

        <many-to-one
            name="profileConfiguration"
            class="com.ems.model.ProfileConfiguration"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="profile_configuration_id"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Holiday.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
