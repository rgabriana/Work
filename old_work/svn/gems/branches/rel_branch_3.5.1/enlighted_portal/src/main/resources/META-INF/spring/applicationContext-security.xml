	<bean id="ldapActiveDirectoryAuthProvider" class="org.springframework.security.ldap.authentication.ad.ActiveDirectoryLdapAuthenticationProvider">
        <constructor-arg value="${ldap.base.dn}" />
        <constructor-arg value="${ldap.url}" />
        <property name="useAuthenticationRequestCredentials" value="true" />
	    <property name="convertSubErrorCodesToExceptions" value="true" />
	 </bean>
	
	<bean id="authenticationProvider" class="com.enlightedportal.security.EmsauthenticationProvider" />
	
	
	<bean id="authenticationFailureHandler"
		class="org.springframework.security.web.authentication.ExceptionMappingAuthenticationFailureHandler">
		<property name="exceptionMappings">
			<props>
				<prop
					key="org.springframework.security.authentication.BadCredentialsException">/login.jsp?error=true</prop>
				<prop
					key="org.springframework.security.authentication.AuthenticationCredentialsNotFoundException">/login.jsp?error=true</prop>
				<prop
					key="org.springframework.security.authentication.CredentialsExpiredException">/login.jsp?inactive=true</prop>
				<prop
					key="org.springframework.security.authentication.LockedException">/login.jsp?inactive=true</prop>
				<prop
					key="org.springframework.security.authentication.DisabledException">/login.jsp?inactive=true</prop>
			</props>
		</property>
	</bean>
		
	<bean id="emsUserDetailsService"
		class="com.enlightedportal.security.EmsUserDetailsService" />
	<bean id="postSuccessAuthHandler"
		class="com.enlightedportal.security.PostSuccessfulAuthenticationHandler">
		<property name="defaultTargetUrl" value="/home.ems"></property>
	</bean>
	<bean
		class="org.springframework.security.authentication.encoding.Md5PasswordEncoder"
		id="passwordEncoder" />
</beans>
