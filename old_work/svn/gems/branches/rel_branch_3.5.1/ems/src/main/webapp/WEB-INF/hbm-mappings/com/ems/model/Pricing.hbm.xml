<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="com.ems.model.Pricing"
        table="pricing"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Long"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">pricing_seq</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Pricing.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="priceLevel"
            type="java.lang.String"
            update="true"
            insert="true"
            column="price_level"
        />

        <property
            name="interval"
            type="java.lang.String"
            update="true"
            insert="true"
            column="interval"
        />

        <property
            name="price"
            type="java.lang.Double"
            update="true"
            insert="true"
            column="price"
        />

        <property
            name="dayType"
            type="java.lang.String"
            update="true"
            insert="true"
            column="day_type"
        />

        <property
            name="fromTime"
            type="java.util.Date"
            update="true"
            insert="true"
            column="from_time"
        />

        <property
            name="toTime"
            type="java.util.Date"
            update="true"
            insert="true"
            column="to_time"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Pricing.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
