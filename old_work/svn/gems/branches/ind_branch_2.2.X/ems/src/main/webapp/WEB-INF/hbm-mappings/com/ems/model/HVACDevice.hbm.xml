<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.ems.model.HVACDevice" table="hvac_devices">

		<id name="id" column="id" type="java.lang.Long" unsaved-value="null">
			<generator class="native">
				<param name="sequence">hvac_devices_seq</param>
			</generator>
		</id>
		<property name="name" type="java.lang.String" update="true"
			insert="true" column="name" />

		<property name="deviceId" type="java.lang.String" update="true"
			insert="true" column="device_id" />

		<property name="campusId" type="java.lang.Long" update="true"
			insert="true" column="campus_id" />

		<property name="buildingId" type="java.lang.Long" update="true"
			insert="true" column="building_id" />

		<property name="floorId" type="java.lang.Long" update="true"
			insert="true" column="floor_id" />

		<property name="areaId" type="java.lang.Long" update="true"
			insert="true" column="area_id" />

		<property name="xaxis" type="java.lang.Integer" update="true"
			insert="true" column="x" />

		<property name="yaxis" type="java.lang.Integer" update="true"
			insert="true" column="y" />

		<property name="deviceType" type="java.lang.Integer" update="true"
			insert="true" column="device_type" />
		
		<property name="controllerId" type="java.lang.String" update="true"
			insert="true" column="controller_id" />

	</class>

</hibernate-mapping>