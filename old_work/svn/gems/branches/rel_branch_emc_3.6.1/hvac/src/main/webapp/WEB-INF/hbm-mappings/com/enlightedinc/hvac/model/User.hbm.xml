<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.enlightedinc.hvac.model.User" table="users">

		<id name="id" column="id" type="java.lang.Long" unsaved-value="null">
			<generator class="native">
				<param name="sequence">user_seq</param>
			</generator>
		</id>

		<property name="email" type="java.lang.String" update="true"
			insert="true" column="email" />

		<property name="password" type="java.lang.String" update="true"
			insert="true" column="password" />
			
		<property name="roleId" type="java.lang.Long" update="true"
			insert="true" column="role_id" />

		<property name="status" update="true" insert="true" column="status">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">com.enlightedinc.hvac.types.Status</param>
				<!-- This is little wierd but hibernate takes number 12 for the String 
					for enum in hbm file -->
				<param name="type">12</param>
			</type>
		</property>
		
	</class>

</hibernate-mapping>
