# /etc/sudoers
#
# This file MUST be edited with the 'visudo' command as root.
#
# See the man page for details on how to write a sudoers file.
#

Defaults	env_reset

# Host alias specification

# User alias specification

# Cmnd alias specification

# User privilege specification
root	ALL=(ALL) ALL

# Allow members of group sudo to execute any command after they have
# provided their password
# (Note that later entries override this, so you might need to move
# it further down)
%sudo ALL=(ALL) ALL
#
#includedir /etc/sudoers.d

# Members of the admin group may gain root privileges
%admin ALL=(ALL) ALL


# tomcat given restricted permissions
tomcat ALL=NOPASSWD:/bin/cp,/bin/ls,/bin/tar,/usr/bin/dpkg,/usr/bin/tee,/usr/sbin/dpkg-reconfigure,/etc/init.d/networking,/bin/date,/etc/init.d/tomcat,/etc/init.d/isc-dhcp-server,/sbin/ifup,/sbin/ifdown,/usr/bin/killall,/sbin/reboot,/bin/sed,/bin/rm,/sbin/hwclock,/usr/bin/find,/sbin/iptables-restore,/opt/tomcat/Enlighted/bacnet/bacnetLighting,/bin/pidof,/bin/kill,/sbin/ifconfig,/bin/cat,/bin/mv,/bin/mkdir,/sbin/initctl,/usr/sbin/service

# www-data given restricted permissions
www-data ALL=NOPASSWD: /bin/cp,/bin/ls,/bin/tar,/usr/bin/dpkg,/usr/bin/tee,/usr/sbin/dpkg-reconfigure,/etc/init.d/networking,/bin/date,/etc/init.d/tomcat,/etc/init.d/isc-dhcp-server,/sbin/ifup,/sbin/ifdown,/etc/init.d/apache2,/usr/bin/find,/bin/sed,/bin/rm,/sbin/ifconfig,/bin/mv,/bin/mkdir,/sbin/initctl,/usr/bin/killall,/bin/kill,/bin/pidof,/usr/sbin/apachectl,/usr/sbin/service
